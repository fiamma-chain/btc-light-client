{
    "name": "@btc-light-client/contracts",
    "version": "1.0.0",
    "description": "Bitcoin Light Client Contracts with LayerZero Cross-chain Support",
    "main": "index.js",
    "scripts": {
        "clean": "rm -rf artifacts cache out",
        "compile": "forge build",
        "test": "forge test",
        "deploy:lz-btc-mirror": "npx hardhat deploy --tags LzBtcMirror",
        "deploy:lz-btc-tx-verifier": "npx hardhat deploy --tags LzBtcTxVerifier",
        "lz:config:init": "npx hardhat lz:oapp-read:config:init --contract-name LzBtcMirror --oapp-config layerzero.config.ts",
        "lz:wire": "npx hardhat lz:oapp-read:wire --oapp-config layerzero.config.ts",
        "lz:config:get": "npx hardhat lz:oapp-read:config:get --oapp-config layerzero.config.ts",
        "lz:btc-mirror:read": "npx hardhat lz:btc-mirror:read"
    },
    "devDependencies": {
        "@layerzerolabs/lz-definitions": "^3.0.75",
        "@layerzerolabs/lz-evm-protocol-v2": "^3.0.75",
        "@layerzerolabs/lz-evm-messagelib-v2": "^3.0.75",
        "@layerzerolabs/lz-evm-v1-0.7": "^3.0.75",
        "@layerzerolabs/oapp-evm": "^0.3.2",
        "@layerzerolabs/toolbox-foundry": "^0.1.13",
        "@layerzerolabs/toolbox-hardhat": "^0.6.12",
        "@layerzerolabs/io-devtools": "^0.3.1",
        "@layerzerolabs/test-devtools-evm-foundry": "^7.0.0",
        "@layerzerolabs/eslint-config-next": "^2.3.39",
        "@layerzerolabs/prettier-config-next": "^2.3.39",
        "@openzeppelin/contracts": "^5.0.0",
        "@openzeppelin/contracts-upgradeable": "^5.0.0",
        "hardhat": "^2.19.0",
        "hardhat-deploy": "^0.12.4",
        "@nomiclabs/hardhat-ethers": "^2.2.3",
        "@nomicfoundation/hardhat-ethers": "^3.0.5",
        "solidity-bytes-utils": "^0.8.2",
        "zod": "^3.22.4",
        "@types/node": "^18.18.14",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.4",
        "dotenv": "^16.4.1",
        "ethers": "^5.7.2"
    },
    "dependencies": {
        "@layerzerolabs/lz-evm-sdk-v2": "^3.0.75"
    }
}